<%= form_with model: [@article, @article.comments.build] do |f| %>
    <%= f.label :commenter %>
    <br />
    <%= f.text_field :commenter %>
    <br /><br />
    <%= f.label :status %>
    <br />
    <%= f.select :status, ['public', 'private', 'archived'] %>
    <br /><br />
    <%= f.label :body %>
    <br />
    <%= f.text_field :body %>
    <br /><br />
    <%= f.submit %>
<% end %>